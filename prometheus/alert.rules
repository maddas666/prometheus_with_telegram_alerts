groups:
- name: targets
  rules:
  - alert: monitor_service_down
    expr: up == 0
    for: 30s
    labels:
      severity: critical
    annotations:
      summary: "Monitor service non-operational"
      description: "Service {{ $labels.instance }} is down."

- name: containers
  rules:

  - alert: elk_down
    expr: time() - container_last_seen{name="elk"} > 60
    for: 30s
    labels:
      severity: critical
    annotations:
      summary: "ELK down"
      description: "ELK container is down for more than 60 seconds."
  
  - alert: gotenberg_down
    expr: time() - container_last_seen{name="gotenberg"} > 60
    for: 30s
    labels:
      severity: critical
    annotations:
      summary: "Gotenberg down"
      description: "Gotenberg container is down for more than 60 seconds."

  - alert: infolog24-identity_down
    expr: time() - container_last_seen{name="infolog24-identity"} > 60
    for: 30s
    labels:
      severity: critical
    annotations:
      summary: "infolog24-identity down"
      description: "infolog24-identity container is down for more than 60 seconds."
  
  - alert: infolog24-internal-api_down
    expr: time() - container_last_seen{name="infolog24-internal-api"} > 60
    for: 30s
    labels:
      severity: critical
    annotations:
      summary: "infolog24-internal-api down"
      description: "infolog24-internal-api container is down for more than 60 seconds."

  - alert: infolog24-internal-web_down
    expr: time() - container_last_seen{name="infolog24-internal-web"} > 60
    for: 30s
    labels:
      severity: critical
    annotations:
      summary: "infolog24-internal-web down"
      description: "infolog24-internal-web container is down for more than 60 seconds."
  
  - alert: infolog24-worker_down
    expr: time() - container_last_seen{name="infolog24-worker"} > 60
    for: 30s
    labels:
      severity: critical
    annotations:
      summary: "infolog24-worker down"
      description: "infolog24-worker container is down for more than 60 seconds."